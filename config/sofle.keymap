    behaviors {
        ht_tp_tapsl_holdto: ht_tp_tapsl_holdto {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_TP_TAPSL_HOLDTO";
            bindings = <&to>, <&sl>;

            #binding-cells = <2>;
            flavor = "tap-preferred";
            tapping-term-ms = <200>;
        };

        quotes: quotes {
            compatible = "zmk,behavior-mod-morph";
            label = "QUOTES";
            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
            bindings = <&kp DOUBLE_QUOTES>, <&kp GRAVE>;
        };

        ht_hpidle_tapkp_holdmo: ht_hpidle_tapkp_holdmo {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_HPIDLE_TAPKP_HOLDMO";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            require-prior-idle-ms = <100>;
