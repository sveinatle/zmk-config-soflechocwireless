        ht_hp_tapsk_holdkp: ht_hp_tapsk_holdkp {
            compatible = "zmk,behavior-hold-tap";
            label = "HT_HP_TAPSK_HOLDKP";
            bindings = <&kp>, <&sk>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
        };

        eacc: eacc {
            compatible = "zmk,behavior-hold-tap";
            label = "EACC";
            bindings = <&nor_eacc>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <200>;
            flavor = "tap-preferred";
